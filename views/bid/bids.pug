extends ../layouts/appTable.pug

append scripts
  script(src="/bids.js")

block header
  form(id="browse-filter-form" class="my-1")
    div(class="d-flex flex-row")
      input(
        class="form-control flex-grow-1"
        type="text"
        name="address"
        value=(query.address || "")
        placeholder="Search stop address"
      )
      button(
        id="browse-filter-button"
        class="ml-1 btn btn-primary flex-shrink-0" 
        type="submit"
      ) Search
      
block table
  table(class="table table-hover table-bordered table-striped")
    thead
      th Origin
      th Bid Status
      th #Seats
      th Departing on
    tbody
      each bidWithTrip in bidsWithTrip 
        tr(
          class="link-table-row"
          data-href=`/p/trips/${bidWithTrip.trip.tid}/bids/${bidWithTrip.address}`
        )
          td= bidWithTrip.trip.origin
          td= bidWithTrip.status
          td= bidWithTrip.trip.seats
          td= bidWithTrip.trip.departingOn
