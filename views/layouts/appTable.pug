extends ../layouts/app.pug

append scripts
  script(src="/scripts/appTable.js")

append styles
  link(rel="stylesheet" href="/styles/appTable.css")

block content
  .app-table-container
    .my-2
      block header

    block table
    
    block paginationControls
      ul(class="pagination justify-content-end")
        li(class="page-item" + (!hasPrevPage ? " disabled" : ""))
          a(
            class="page-link"
            href=prevPageUrl
          ) Previous
        li(class="page-item" + (!hasNextPage ? " disabled" : ""))
          a(
            class="page-link"
            href=nextPageUrl
          ) Next
