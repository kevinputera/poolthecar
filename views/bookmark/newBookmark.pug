extends ../layouts/appForm.pug

append scripts
  script(src="/scripts/newBookmark.js")

block form
  h4.mb-3 New bookmark
  form#new-bookmark-form
    .form-group
      label(for="bookmark-name") Name
      input(
        id="bookmark-name"
        class="form-control"
        name="name"
        type="text"
        placeholder="Enter name"
      )
    .form-group
      label(for="bookmark-address") Address
      input(
        id="bookmark-address"
        class="form-control"
        name="address"
        type="text"
        placeholder="Enter address"
      )
    .d-flex
      button(
        id="new-bookmark-button"
        class="btn btn-primary"
        type="submit"
      ) Create
      a(
        class="ml-2 btn btn-secondary"
        role="button"
        href="/p/bookmarks"
      ) Back
