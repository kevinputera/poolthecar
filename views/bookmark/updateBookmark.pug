extends ../layouts/appForm.pug

append scripts
  script(src="/scripts/updateBookmark.js")

block form
  h4.mb-3 Update bookmark
  form#update-bookmark-form
    .form-group
      label(for="bookmark-name") Name
      input(
        id="bookmark-name"
        class="form-control"
        readonly
        name="name"
        value=bookmark.name
        type="text"
        placeholder="Enter name"
      )
    .form-group
      label(for="bookmark-address") Address
      input(
        id="bookmark-address"
        class="form-control"
        name="address"
        value=bookmark.address
        type="text"
        placeholder="Enter address"
      )
    .d-flex
      button(
        id="update-bookmark-button"
        class="btn btn-primary"
        type="submit"
      ) Update
      a(
        class="ml-2 btn btn-secondary"
        role="button"
        href="/p/bookmarks"
      ) Back
