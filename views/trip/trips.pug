extends ../layouts/appTable.pug

block header
  form(id="trip-filter-form" class="my-1")
    div(class="d-flex flex-row")
      input(
        class="form-control flex-grow-1"
        type="text"
        name="search"
        value=search
        placeholder="Search for origin or stops"
      )
      button(
        id="trip-filter-button"
        class="ml-2 btn btn-primary flex-shrink-0" 
        type="submit"
      ) Search
      
block table
  table(class="table table-hover table-bordered table-striped")
    thead
      th Origin
      th Trip Status
      th #Seats
      th Departing on
    tbody
      each trip in trips 
        tr(
          class="link-table-row"
          data-href=`/p/trips/${trip.tid}`
        )
          td= trip.origin
          td= trip.status
          td= trip.seats
          td= trip.departingOn
